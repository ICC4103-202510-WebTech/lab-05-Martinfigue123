<div class="card mb-4">
  <div class="card-body">
    <h1 class="card-title">
      <%= @user.first_name %> <%= @user.last_name %>
    </h1>
    <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
    <%= link_to "Edit User", edit_user_path(@user), class: "btn btn-sm btn-outline-primary" %>
  </div>
</div>

<h2>Chats</h2>
<ul class="list-group mb-4">
  <% @user.chats.each do |chat| %>
    <li class="list-group-item">
      <%= link_to "Chat ##{chat.id}", chat_path(chat) %>
    </li>
  <% end %>
</ul>

<h2>Messages</h2>
<ul class="list-group mb-4">
  <% @user.messages.each do |message| %>
    <li class="list-group-item">
      <%= link_to truncate(message.body, length: 80), message_path(message) %>
    </li>
  <% end %>
</ul>
