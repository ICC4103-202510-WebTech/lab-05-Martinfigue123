<h1>Edit Chat</h1>

<%= form_with model: @chat, local: true do |form| %>
  <div>
    <%= form.label :sender_id, "Sender" %><br>
    <%= form.collection_select :sender_id, User.all, :id, :first_name, :last_name, prompt: "Select Sender" %>
  </div>

  <div>
    <%= form.label :receiver_id, "Receiver" %><br>
    <%= form.collection_select :receiver_id, User.all, :id, :first_name, :last_name, prompt: "Select Receiver" %>
  </div>

  <div>
    <%= form.submit "Update Chat" %>
  </div>
<% end %>

<%= link_to 'Back', chat_path(@chat) %>
