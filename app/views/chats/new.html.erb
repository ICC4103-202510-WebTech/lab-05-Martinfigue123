<h1>New Chat</h1>

<%= form_with model: @chat, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :sender_id, "Sender", class: "form-label" %>
    <%= form.collection_select :sender_id, User.all, :id,
      ->(u) { "#{u.first_name} #{u.last_name}" }, { prompt: "Select Sender" }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.label :receiver_id, "Receiver", class: "form-label" %>
    <%= form.collection_select :receiver_id, User.all, :id,
      ->(u) { "#{u.first_name} #{u.last_name}" }, { prompt: "Select Receiver" }, { class: "form-select" } %>
  </div>

  <div>
    <%= form.submit "Create Chat", class: "btn btn-success" %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to 'Back to Chats', chats_path, class: "btn btn-link" %>
</div>
