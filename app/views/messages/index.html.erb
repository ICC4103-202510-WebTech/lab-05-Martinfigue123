<h1 class="mb-4">Messages</h1>

<table class="table table-striped table-hover">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>User</th>
      <th>Chat ID</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= truncate(message.body, length: 60) %></td>
        <td><%= message.user.first_name %> <%= message.user.last_name %></td>
        <td><%= message.chat_id %></td>
        <td><%= link_to 'Show', message_path(message), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to "Edit", edit_message_path(message), class: "btn btn-sm btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
