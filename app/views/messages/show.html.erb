<h1 class="mb-4">Message</h1>

<div class="card mb-4">
  <div class="card-body">
    <p class="card-text"><strong>User:</strong> <%= @message.user.first_name %> <%= @message.user.last_name %></p>
    <p class="card-text"><strong>Chat:</strong> <%= link_to "Chat ##{@message.chat.id}", chat_path(@message.chat) %></p>
    <p class="card-text"><strong>Body:</strong> <%= @message.body %></p>
  </div>
</div>

<%= link_to "Edit Message", edit_message_path(@message), class: "btn btn-outline-primary" %>
<%= link_to "Back to Messages", messages_path, class: "btn btn-link ms-2" %>
